        <div class="col-lg-9">


            <div class="row">

                   <#list mealsFromServer as meal>
                       <div class="col-lg-4 col-md-6 mb-4">
                           <div class="card h-100">
                               <a href="#"><img class="card-img-top"
                                                src="${meal.imageAddress}"
                                                alt=""></a>
                               <div class="card-body">
                                   <h4 class="card-title">
                                       <a href="#">${meal.name}</a>
                                   </h4>
                                    <#list meal.products as product>
                                            <p class="card-text">${product.name}</p>
                                    </#list>
                               </div>
                               <div class="card-footer">
                                   <small class="text">Meal calories ${meal.calories}</small>
                               </div>
                           </div>
                       </div>
                   </#list>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
